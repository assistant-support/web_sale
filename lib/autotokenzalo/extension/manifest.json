{
  "manifest_version": 3,
  "name": "Zalo Notifier",
  "description": "Giúp lấy thông tin đăng nhập, danh sách bạn bè và danh sách nhóm trong Zalo",
  "version": "1.0",
  "background": {
    "service_worker": "./scripts/background.js"
  },
  "action": {
    "default_popup": "./popup/popup.html",
    "default_icon": "./images/icon-48.png"
  },
  "icons": {
    "48": "./images/icon-48.png"
  },
  "permissions": ["webRequest", "cookies", "tabs", "browsingData", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content-script.js"]
    }
  ]
}
